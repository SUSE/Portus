.row
  .col-sm-12.create-new-account
  h3.social-login-title Social logins
.row.social-btns
  - if APP_CONFIG.enabled? "oauth.google_oauth2"
    .col-xs-12.col-sm-6
      = link_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-primary btn-block btn-lg', method: :post do
        i.fa.fa-google
        '&nbsp;Google

