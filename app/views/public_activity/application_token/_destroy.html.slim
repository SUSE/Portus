li
  .activitie-container
    .activity-type.application-token-destroyed
      i.fa.fa-key
    .user-image
      = user_image_tag(activity.owner)
    .description
      h6
        strong
          = "#{activity_owner(activity)} removed the token"
        = " for the application "
        strong
          = activity.parameters[:application]
      small
        i.fa.fa-clock-o
        = activity_time_tag activity.created_at
